{{!
    @template local_iomad_learningpath/manage_page

    Display learning path course list

    Howard Miller 2018
}}

<h2>{{ path.name }}</h2>

<div class="row">
    <div class="col-sm-6">
        <div class="card bg-light">
            <div class="card-header">
                {{# str }}coursesinpath, local_iomad_learningpath{{/ str }}
            </div>
            <div class="card-body card-block">
                <p class="card-text">
                    {{^ iscourses }}
                        <div class="alert alert-warning">
                            {{# str }}nocoursesinpath, local_iomad_learningpath{{/ str }}
                        </div>
                    {{/ iscourses }}
                </p>
            </div>
        </div>
    </div>
    <div class="col-sm-2">

    </div>
    <div class="col-sm-6">
        <div class="card bg-light">
            <div class="card-header">
                {{# str }}prospectivecourses, local_iomad_learningpath{{/ str }}
            </div>
            <div class="card-body card-block">
                <p class="card-text">
                    {{^ isprospectivecourses }}
                        <div class="alert alert-warning">
                            {{# str }}noprospectivecourses, local_iomad_learningpath{{/ str }}
                        </div>
                    {{/ isprospectivecourses }}
                    {{# isprospectivecourses }}
                        {{# prospectivecourses }}
                            <ul>
                                <li class="text-truncate" data-courseid="{{ id }}"><i class="fa fa-globe"></i> {{ fullname }}</li>
                            </ul>
                        {{/ prospectivecourses }}
                    {{/ isprospectivecourses }}
                </p>
            </div>
        </div>
    </div>

    </div>
</div>
